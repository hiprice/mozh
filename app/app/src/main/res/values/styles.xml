<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BoxElement">
        <item name="android:background">@color/elementBoxBackground</item>
        <item name="android:layout_margin">@dimen/element_box_margin</item>
        <item name="android:padding">@dimen/element_box_padding</item>
    </style>

    <style name="BoxMain">
        <item name="android:background">@color/layoutBackground</item>
        <item name="android:padding">@dimen/element_box_padding</item>
    </style>

    <style name="Founded">
        <item name="android:textColor">@color/foundedTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lost">
        <item name="android:textColor">@color/lostTextColor</item>
    </style>

    <style name="appTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="pageTitle">
        <item name="android:textColor">@color/darkWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


</resources>
