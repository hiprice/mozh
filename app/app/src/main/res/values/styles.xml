<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BoxElement">
        <item name="android:background">@color/elementBoxBackground</item>
        <item name="android:layout_margin">@dimen/element_box_margin</item>
        <item name="android:padding">@dimen/element_box_padding</item>

    </style>

    <style name="BoxMain">
        <item name="android:background">@color/layoutBackground</item>
        <item name="android:padding">@dimen/element_box_padding</item>
    </style>

</resources>
